<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_client_default_clientIp"
        android:inputType="textCapWords"
        android:key="clientIp"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_client_clientIp" />


    <EditTextPreference
        android:defaultValue="@string/pref_client_default_clientPort"
        android:inputType="number"
        android:key="clientPort"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_client_clientPort" />

</PreferenceScreen>
